<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavActivities.ContactActivity">


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/imFed"
            android:layout_width="268dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/undisp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/imFed"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-34dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lina"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/linEmail"
                android:textColor="@color/b8"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/belay"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/belayEmail"
                android:textColor="@color/b8"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/miki"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mikiEmail"
                android:textColor="@color/b8"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/arif"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/arifEmail"
                android:textColor="@color/b8"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/rose"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/roseEmail"
                android:textColor="@color/b8"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="350dp"
            android:layout_height="63dp"
            android:layout_below="@id/layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/ask"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="-25dp"
            android:gravity="bottom"
            android:hint="@string/writes"
            android:overScrollMode="always"
            android:textColor="@color/black"
            android:textColorHint="@color/lightgray"
            android:textSize="15sp"
            />


        <EditText
            android:id="@+id/edtCont"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/edtEmail"
            android:gravity="bottom"
            android:hint="@string/writ"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:textColor="@color/black"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp" />


        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edtCont"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/send"
            android:textColor="#750101"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>